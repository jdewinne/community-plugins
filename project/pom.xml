<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.xebialabs.deployit</groupId>
  <artifactId>community-plugins-project</artifactId>
  <version>4.0</version>
  <packaging>pom</packaging>
  <properties>
    <deployit.server.home>${env.DEPLOYIT_HOME}</deployit.server.home>
    <deployit.cli.home>${env.DEPLOYIT_CLI_HOME}</deployit.cli.home>
    <deployit.api.version>2015.6.1</deployit.api.version>
    <deployit.spi.version>5.1.1</deployit.spi.version>
    <deployit.engine.version>5.1.1</deployit.engine.version>
    <deployit.servercli.version>5.1.1</deployit.servercli.version>
    <deployit.bundledplugin.version>5.1.1</deployit.bundledplugin.version>
    <deployit.wlsplugin.version>5.0.0</deployit.wlsplugin.version>
    <overthere.version>4.2.1</overthere.version>
    <scannit.version>1.4.0</scannit.version>
    <truezip.version>7.7.8</truezip.version>
    <github.global.server>github</github.global.server>
    <maven.compile.source>1.7</maven.compile.source>
    <maven.compile.target>1.7</maven.compile.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <scm>
    <connection>scm:git:git://github.com/xebialabs/community-plugins.git</connection>
    <url>scm:git:git://github.com/xebialabs/community-plugins.git</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>nexus-dexter-releases</id>
      <url>http://nexus.xebialabs.com/nexus/content/repositories/community</url>
    </repository>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
