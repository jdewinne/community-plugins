      </dependency>
      <dependency>
        <groupId>com.xebialabs.deployit</groupId>
        <artifactId>cli</artifactId>
        <version>${deployit.servercli.version}</version>
        <scope>system</scope>
        <systemPath>${deployit.cli.home}/lib/cli-${deployit.servercli.version}.jar</systemPath>
      </dependency>
      <dependency>
        <groupId>com.xebialabs.deployit</groupId>
        <artifactId>engine-spi</artifactId>
